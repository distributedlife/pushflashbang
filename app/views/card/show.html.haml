=render :partial => '/header', :locals => {:title => t('card.show.title'), :subtitle => t('card.show.subtitle')}
.right{:class => ["panel"], :style => "width: 25%"}
  %p.description= link_to t('card.show.edit'), edit_deck_card_path(@card.deck_id, @card.id)
  .pad
%section{:class => ["left panel"], :style => "width: 60%"}
  %p.giant= @card.front
  - if @card.audio.file?
    .section_break
    %audio{:src => @card.audio.url, :autoplay => "autoplay"}
      Your browser does not support the audio element.
  - unless @card.back == ""
    .section_break
    %p.giant= @card.back
  - unless @card.pronunciation == ""
    .section_break
    .pad_from_top
    %p.centre pronunciation
    %p.giant= @card.pronunciation
  .pad

