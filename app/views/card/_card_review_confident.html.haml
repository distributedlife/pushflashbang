= link_to t('actions.review-confident'), '#', :class => 'btn btn-large', :method => :post, :id => "do_good"
:javascript
  $j('#do_good').click(function(event) {
    var end = new Date();
    var start_time = document.getElementById("start_time") ;
    var duration = document.getElementById("duration") ;
    elapsed = end - start_time.value;

    var link = "#{review_deck_card_path(:deck_id => @card.deck_id, :id => @card.id, :answer => 'good')}";
    link = link + "&duration=" + duration.value + "&elapsed=" + elapsed ;

    $j('#do_good').attr('href', link);
  });