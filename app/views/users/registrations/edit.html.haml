.container
  =render :partial => '/common/page_header', :locals => {:title => t('titles.user-edit.title'), :subtitle => t('titles.user-edit.subtitle')}
  = semantic_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class => "form-horizontal"} ) do |f|
    .clearfix
      = f.input :email, :as => :email, :label => I18n.t('form.user-change-email'), :required => false
    .clearfix
      = f.input :native_language_id, :as => :select, :collection => Language.all, :label => I18n.t('form.user-translation-language'), :required => false, :wrapper_html => {:class => 'width60'}
      :javascript
        setup_chosen("#user_native_language_id", "#{t('actions.select-language')}")
    .clearfix
      = f.input :password, :as => :password, :label => I18n.t('form.user-change-password'), :required => false
    .clearfix
      = f.input :password_confirmation, :as => :password, :label => I18n.t('form.user-confirm-new-password'), :required => false
    .clearfix
      = f.input :current_password, :as => :password, :label => I18n.t('form.user-current-password')
    .form-actions
      .input
        = f.submit I18n.t('actions.update-account'), :class => 'btn btn-primary', :id => "update_account"
        = link_to I18n.t('actions.cancel-account'), registration_path(resource_name), :confirm => I18n.t('actions.confirm-cancel'), :method => :delete, :class => 'btn btn-danger', :id => "cancel_account"