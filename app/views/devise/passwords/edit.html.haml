=render :partial => '/header', :locals => {:title => t('user.change_password.title'), :subtitle => t('user.change_password.subtitle')}
%section{:class => ["panel"]}
  - semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
    = f.hidden_field :reset_password_token
    = f.input :password, :as => :password, :label => false, :hint => I18n.t('user.change_password.labels.password'), :required => false, :wrapper_html => {:class => 'full_width'}
    .pad_from_top
    = f.input :password_confirmation, :as => :password, :label => false, :hint => I18n.t('user.change_password.labels.confirm_password'), :required => false, :wrapper_html => {:style => 'full_width'}
    .pad_from_top
    = f.submit I18n.t('user.change_password.labels.change_password'), :class => 'positive'