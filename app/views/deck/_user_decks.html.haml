- if @decks.empty?
  #language.alert.alert-block
    %h4.alert-heading= t('text.user-has-no-decks')
- @decks.each do |deck|
  #deck{:id => deck.id, :class => 'panel'}
    - if @card_counts[deck.id].nil?
      %p{:class => ['subscript', 'right']}= "#{t('text.empty-deck')}"
    - else
      %p{:class => ['subscript', 'right']}= "#{@card_counts[deck.id]} cards (#{@due_counts[deck.id]} due)"
    %p.minor_title
      = link_to deck.name, show_deck_path(deck.id)
      %span#shared{:class => 'subscript'}= deck_subtitle(deck)
    %p.description= deck.description
    .pad_from_top
    .pad