- @decks.each do |deck|
  #deck{:id => deck.id, :class => 'panel'}
    - if @card_counts[deck.id].nil?
      %p{:class => ['subscript', 'right']}= "no cards in deck"
    - else
      %p{:class => ['subscript', 'right']}= "#{@card_counts[deck.id]} cards (#{@due_counts[deck.id]} due)"
    %p.minor_title
      = link_to deck.name, show_deck_path(deck.id)
      - if deck.shared
        %span#shared{:class => 'subscript'}= "(shared, pn. on #{deck.pronunciation_side})"
      - else
        %span#shared{:class => 'subscript'}= "(pn. on #{deck.pronunciation_side})"
    %p.description= deck.description
    .pad_from_top
    .pad
