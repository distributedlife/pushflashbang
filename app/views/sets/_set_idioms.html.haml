    = link_to t('actions.prev-chapter'), term_prev_chapter_set_path(set.id, :idiom_id => idiom.id), :id => "term_#{idiom.id}_prev_chapter", :method => :post
    ]
    [
    = link_to t('actions.prev-position'), term_prev_position_set_path(set.id, :idiom_id => idiom.id), :id => "term_#{idiom.id}_prev_position", :method => :post
    ]
    [
    = link_to t('actions.next-position'), term_next_position_set_path(set.id, :idiom_id => idiom.id), :id => "term_#{idiom.id}_next_position", :method => :post
    ]
