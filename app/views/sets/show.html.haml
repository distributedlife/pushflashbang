=render :partial => '/header', :locals => {:title => t('titles.set-show.title'), :subtitle => t('titles.set-show.subtitle')}
%section{:class => ["panel right"], :style => "width: 15%"}
  - if @user_goal.empty?
    - if (params[:language_id])
      %span.menu= link_to t('actions.set-goal'), set_goal_language_set_path(params[:language_id], params[:id]), :class => 'neutral', :id => "set_goal", :method => :put
    - else
      %span.menu= link_to t('actions.set-goal'), select_set_set_language_index_path(params[:id]), :class => 'neutral', :id => "set_goal"
  - else
    - @user_goal.each do |goal|
      %span.menu= link_to t('actions.unset-goal'), unset_goal_language_set_path(goal.language_id, goal.set_id), :class => 'neutral', :id => "unset_goal", :method => :put
  .pad_from_top
  %span.menu= link_to t('actions.link-term'), select_for_set_set_set_terms_path(params[:id]), :class => 'neutral', :id => "add_term"
  .pad_from_top
  %span.menu= link_to t('actions.new-term'), new_set_set_term_path(params[:id]), :class => 'neutral', :method => :get
  .pad_from_top
  %span.menu= link_to t('actions.edit-set'), edit_set_path(params[:id]), :class => 'neutral'
=render :partial => '/sets/set_names', :locals => {:set => @set}
- unless @user_goal.empty?
  - @user_goal.each do |goal|
    // turn this into a partial
    %p
      Practice:
      %span.menu= link_to t('actions.review-listening'), review_language_set_path(goal.language_id, params[:id], :review_mode => 'listening'), :class => 'contrast', :id => "review_#{params[:id]}", :method => :get
      or
      %span.menu= link_to t('actions.review-listen-write'), review_language_set_path(goal.language_id, params[:id], :review_mode => 'listening, writing'), :class => 'contrast', :id => "review_#{params[:id]}", :method => :get
      or
      %span.menu= link_to t('actions.review-listen-type'), review_language_set_path(goal.language_id, params[:id], :review_mode => 'listening, typing'), :class => 'contrast', :id => "review_#{params[:id]}", :method => :get
    .pad_from_top
    %p
      Practice:
      %span.menu= link_to t('actions.review-reading'), review_language_set_path(goal.language_id, params[:id], :review_mode => 'reading'), :class => 'contrast', :id => "review_#{params[:id]}", :method => :get
      or
      %span.menu= link_to t('actions.review-read-speak'), review_language_set_path(goal.language_id, params[:id], :review_mode => 'reading, speaking'), :class => 'contrast', :id => "review_#{params[:id]}", :method => :get
      or
      %span.menu= link_to t('actions.review-read-speak-type'), review_language_set_path(goal.language_id, params[:id], :review_mode => 'reading, speaking, typing'), :class => 'contrast', :id => "review_#{params[:id]}", :method => :get
    %p
    .pad_from_top
      Practice:
      %span.menu= link_to t('actions.review-speaking'), review_language_set_path(goal.language_id, params[:id], :review_mode => 'speaking'), :class => 'contrast', :id => "review_#{params[:id]}", :method => :get
      or
      %span.menu= link_to t('actions.review-speak-write'), review_language_set_path(goal.language_id, params[:id], :review_mode => 'speaking, writing'), :class => 'contrast', :id => "review_#{params[:id]}", :method => :get
      or
      %span.menu= link_to t('actions.review-speak-type'), review_language_set_path(goal.language_id, params[:id], :review_mode => 'speaking, typing'), :class => 'contrast', :id => "review_#{params[:id]}", :method => :get
    .pad_from_top
=render :partial => '/sets/set_terms', :locals => {:set => @set}