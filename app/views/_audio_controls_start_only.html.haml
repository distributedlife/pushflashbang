-id ||= 0
.div{:style => "margin-left:auto; margin-right: auto; width: 35px"}
  #audio{:id => id}
  .jp-audio
    .jp-type-play-only
      #jp_interface{:id => id, :class => "jp-interface"}
        %ul.jp-controls
          %li
            = link_to t('action.play'), '#', :class => "jp-play", :tabindex => "1"
          %li
            = link_to t('action.pause'), '#', :class => "jp-pause", :tabindex => "1"

:javascript
  $j(document).ready(function() {
    $j("#audio_#{id}").jPlayer( {
      ready: function () {
        $j(this).jPlayer("setMedia", {
          mp3: "#{audio_url}"
        });
      },
      solution: "html",
      cssSelectorAncestor: "#jp_interface_#{id}"
    });
  });