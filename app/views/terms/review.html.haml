:javascript
  $('html').keypress(function(event) {
    if (event.which == '32')
    {
      //we are quoting the ruby variable resolution because the javascript test driver crashes doing it. wtf!
      if ($('#do_reveal').is(":visible") && ("#{@typed}" == "false"))
      {
        $('#do_reveal').click();
      }
      else
      {
        var positive_style = 'positive large inline-block' ;

        //click on button with highlight
        if ($('#do_dont_know').attr('class') == positive_style)
        {
          $('#do_dont_know').click();
        }
        else if ($('#do_partial_answer').attr('class') == positive_style)
        {
          $('#do_partial_answer').click();
        }
        else if ($('#do_shaky_good').attr('class') == positive_style)
        {
          $('#do_shaky_good').click();
        }
        else if ($('#do_good').attr('class') == positive_style)
        {
          $('#do_good').click();
        }
      }
    }
    if ($('#do_reveal').is(":hidden"))
    {
      if (event.which == '49')
      {
        $('#do_dont_know').click();
      }
      if (event.which == '50')
      {
        $('#do_partial_answer').click();
      }
      if (event.which == '51')
      {
        $('#do_shaky_good').click();
      }
      if (event.which == '52')
      {
        $('#do_good').click();
      }
    }
  });

