%p= link_to t('actions.review-record-answer'), '#', :class => 'btn btn-large btn-primary', :method => :post, :id => "do_results"
:javascript
  $j('#do_results').click(function(event) {
    var end = new Date();
    var start_time = document.getElementById("start_time") ;
    var duration = document.getElementById("duration") ;
    elapsed = end - start_time.value;

    var link = "#{record_review_language_set_term_path()}";
    link = link + "?duration=" + duration.value ;
    link = link + "&elapsed=" + elapsed ;
    link = link + "&review_mode=" + "#{review_mode}" ;

    if ($j("#review_result_listening").length > 0)
    {
      link = link + "&listening=" + ($j("label[for='review_result_listening']").attr('class') == "checked");
    }
    if ($j("#review_result_reading").length > 0)
    {
      link = link + "&reading=" + ($j("label[for='review_result_reading']").attr('class') == "checked");
    }
    if ($j("#review_result_speaking").length > 0)
    {
      link = link + "&speaking=" + ($j("label[for='review_result_speaking']").attr('class') == "checked");
    }
    if ($j("#review_result_writing").length > 0)
    {
      link = link + "&writing=" + ($j("label[for='review_result_writing']").attr('class') == "checked")
    }
    if ($j("#review_result_typing").length > 0)
    {
      link = link + "&typing=" + ($j("label[for='review_result_typing']").attr('class') == "checked")
    }
    if ($j("#review_result_translating").length > 0)
    {
      link = link + "&translating=" + ($j("label[for='review_result_translating']").attr('class') == "checked")
    }

    $j('#do_results').attr('href', link);
  });