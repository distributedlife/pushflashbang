=render :partial => '/header', :locals => {:title => t('titles.show-term.title'), :subtitle => t('titles.show-term.subtitle')}
%section{:class => ["panel right"], :style => "width: 15%"}
  %span.menu= link_to t('actions.edit'), edit_term_path(params[:id]), :class => 'neutral'
  .pad_from_top
  %span.menu= link_to t('actions.link-translation'), select_term_translations_path(params[:id]), :class => 'neutral', :method => :post
%section{:class => ["panel left"], :style => "width: 70%"}
  #translations
    - if @idiom_translations.empty?
      %p There are currently no translations in the system
    - @idiom_translations.each do |idiom_translation|
      #translation
        #translation{:id => idiom_translation.translation.id}
          %span#language.subscript.contrast_faint= idiom_translation.translation.language
          %span#form= idiom_translation.translation.form
          - unless idiom_translation.translation.pronunciation.empty?
            %span#pronunciation= "(#{idiom_translation.translation.pronunciation})"
          - else
            %span#pronunciation